<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/rc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="LEITURA ATUAL CASA C"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/rc3a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="LEITURA ANTERIOR CASA C"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/m3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="METRO CÚBICO"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/conta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="VALOR TOTAL DA CONTA R$"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=" A CONTA POSSUI JUROS EM ATRASO?"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/grupoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/buttonSim"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="SIM"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textColorLink="@color/teal_200"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/buttonNao"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="NÂO"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RadioGroup>

        <EditText
            android:id="@+id/juros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="VALOR DO JUROS R$"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=" QUAL CASA POSSUI ATRASO?"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/buttonCasab"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="CASA B"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/buttonCasac"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="CASA C"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:text="CALCULAR"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>